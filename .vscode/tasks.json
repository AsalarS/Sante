{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Frontend",
      "type": "shell",
      "command": "npm run dev",
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "Backend (Activate Env and Runserver)",
      "type": "shell",
      "command": "source env/bin/activate && python manage.py runserver",
      "options": {
        "cwd": "${workspaceFolder}/santeBackend" 
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "Daphne Server",
      "type": "shell",
      "command": "source env/bin/activate && daphne -p 8001 -b 0.0.0.0 -v 2 santeBackend.asgi:application",
      "options": {
        "cwd": "${workspaceFolder}/santeBackend"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "Run All Commands",
      "dependsOn": [
        "Run Frontend",
        "Run Backend (Activate Env and Runserver)",
        "Run Daphne Server"
      ],
      "problemMatcher": []
    }
  ]
}
